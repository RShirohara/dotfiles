if (
  $env
  | default "false" "DOTFILES_ENV_LOADED"
  | get "DOTFILES_ENV_LOADED"
) != "true" {
  {{- if (eq .chezmoi.os "linux") }}
  {{-   with $envs := (cat
          (includeTemplate "remove_dot_chezmoidata/env.linux.tmpl" .)
  )}}
  {{-   $envs
        | replaceAllRegex "^" "\n"
        | replaceAllRegex "\n(.*?)=\"(.+)\"" "\n  $$env.$1 = $\"$2\""
  }}
  {{-   end }}
  {{- end -}}
}
