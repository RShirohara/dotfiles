# Git user-level settings.

## Git
[core]
editor = helix
pager = delta

[difftool]
prompt = false

[init]
defaultBranch = main

[interactive]
diffFilter = delta --color-only

[merge]
conflictstyle = diff3

[pull]
rebase = true

[push]
default = simple

## External tool
[delta]
line-numbers = true
navigate = true
width = -2

