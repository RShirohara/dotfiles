#!/usr/bin/env bash
# encoding: UTF-8
# author: RShirohara
# open on windows

usage() {
    cat << EOF
$(basename ${0}) is a tool for open link on WSL.

Usage:
    $(basename ${0}) [path, url]
EOF
}

parse() {
    local target
    if [[ "${1}" =~ ^([a-zA-Z]+)://(.+)\.(.+) ]]; then
        target="${1}"
    else
        target=$(wslpath -w "$(readlink -f "${1:-.}")" 2>/dev/null)
    fi
    printf "${target}"
}

case "${1}" in
    '-h'|'--help')
        usage
        ;;
    *)
        powershell.exe /c start "'$(parse "${1}")'"
        ;;
esac
