#!/usr/bin/env bash
# encoding: UTF-8
# author: RShirohara
# copy & paste

function usage() {
    cat << EOF
$(basename ${0}) is a tool for copy & paste on WSL.

Usage:
    $(basename ${0}) [<options>]

Options:
    --help, -h      print this
    -n              don't output the trailing newline
EOF
}

function _get() {
    powershell.exe /c Get-Clipboard | sed -Ez -e "s/\r//g"
}

function _set() {
    printf "${1}" | clip.exe
}

case "${1}" in
    '-h'|'--help' )
        usage
        ;;
    '-n' )
        _get | sed -z "s/\n$//"
        ;;
    '')
        if [ -p /dev/stdin ]; then
            _s=$(cat -)
            _set "${_s}"
        else
            _get
        fi
        ;;
    * )
        _set "${1}"
        ;;
esac
