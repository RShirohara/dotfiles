# Git user-level settings.

## Git settings
[branch]
sort = -committerdate

[commit]
verbose = true

[core]
editor = {{ .chezmoi.config.edit.command }}
fsmonitor = true
pager = {{ .chezmoi.config.diff.pager }}
untrackedCache = true

[credential]
{{ if (and (eq .chezmoi.os "linux") (.chezmoi.kernel.osrelease | lower | contains "microsoft")) -}}
helper = /mnt/c/Program\\ Files/Git/mingw64/bin/git-credential-manager.exe
{{ else if (eq .chezmoi.os "linux") -}}
helper = libsecret
helper = oauth
{{- end }}

[diff]
algorithm = histogram
colorMoved = plain
mnemonicPrefix = true
renames = true

[difftool]
prompt = false

[fetch]
all = true
prune = true
pruneTags = true

[init]
defaultBranch = main

[interactive]
diffFilter = {{ .chezmoi.config.diff.pager }} --color-only

[merge]
conflictstyle = zdiff3

[pull]
rebase = true

[push]
autoSetupRemote = true
default = simple
followTags = true

[rebase]
autoSquash = true
autoStash = true
updateRefs = true

[rerere]
autoUpdate = true
enabled = true

[tag]
sort = version:refname

## External tool settings
[delta]
line-numbers = true
navigate = true
width = -2

[ghq]
root = ~/Projects

