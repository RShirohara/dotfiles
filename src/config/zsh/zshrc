#### @twpayne/chezmoi
zi light-mode lucid blockf for \
  as="program" from="gh-r" \
    sbin="chezmoi" \
    mv="completions/chezmoi.zsh -> _chezmoi" \
    atclone="[ -f ~/.local/bin/chezmoi ] && rm ~/.local/bin/chezmoi" \
    @twpayne/chezmoi

#### @x-motemen/ghq
zi light-mode lucid blockf for \
  as="program" from="gh-r" \
    sbin="ghq_*/ghq" \
    atclone="rm -r ghq_*/misc/bash" \
    atpull="%atclone" \
    @x-motemen/ghq
