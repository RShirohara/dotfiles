# Git user-level settings.

## Git
[core]
editor = helix
pager = delta

[difftool]
prompt = false

[init]
defaultBranch = main

[interactive]
diffFilter = delta --color-only

[merge]
conflictstyle = diff3

[pull]
rebase = true

[push]
default = simple

[alias]
fpush = push --force-if-includes --force-with-lease
lg = log --color --abbrev-commit --date=short --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cd) %C(bold blue)<%an>%Creset'

## External tool
[delta]
line-numbers = true
navigate = true
width = -2

## Profiles
[includeIf "hasconfig:remote.*.url:https://github.com/**"]
path = ./profiles/rshirohara@github.com.gitconfig

[includeIf "hasconfig:remote.*.url:git@github.com:*/**"]
path = ./profiles/rshirohara@github.com.gitconfig

[includeIf "hasconfig:remote.*.url:https://aur.archlinux.org/**"]
path = ./profiles/rshirohara@aur.archlinux.org.gitconfig

[includeIf "hasconfig:remote.*.url:aur@aur.archlinux.org:/**"]
path = ./profiles/rshirohara@aur.archlinux.org.gitconfig
