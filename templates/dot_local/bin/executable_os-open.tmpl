{{- if (eq .chezmoi.os "darwin") }}
{{-   includeTemplate "scripts/os-open/darwin.sh" }}
{{- else if (and
      (eq .chezmoi.os "linux")
      (.chezmoi.kernel.osrelease | lower | contains "microsoft")
) }}
{{-   includeTemplate "scripts/os-open/linux.wsl.sh" }}
{{- else if (eq .chezmoi.os "linux") }}
{{-   includeTemplate "scripts/os-open/linux.default.sh" }}
{{- end -}}
