## Aliases
[alias]
log-graph = log --color --abbrev-commit --date=short --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cd) %C(bold blue)<%an>%Creset'
push-force = push --force-if-includes --force-with-lease
